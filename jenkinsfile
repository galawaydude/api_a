// Jenkinsfile
pipeline {
    agent any

    stages {
        // ## Stage 1: Get the code
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/galawaydude/api_a.git'
            }
        }

        // ## Stage 2: Analyze code quality
        stage('SonarQube Code Analysis') {
            steps {
                script {
                    def sqScanner = tool 'DefaultSonarScanner'
                    // Corrected to use -Dsonar.token with your new token
                    sh "${sqScanner}/bin/sonar-scanner -Dsonar.host.url=http://sonarqube:9000 -Dsonar.token=squ_f5405d34150ffcbd550e58871007da020a2d7b9b"
                }
            }
        }

        // ## Stage 3: Build and Test the API
        stage('Build and Test') {
            steps {
                script {
                    def dockerImage = docker.build("llm-api:${env.BUILD_NUMBER}")

                    dockerImage.withRun { container ->
                        sh 'sleep 15'
                        sh 'npm install -g newman'
                        sh "newman run api_test.postman_collection.json"
                    }
                }
            }
        }
    }
}